<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item_parent"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardBackgroundColor="@color/color_ffffff"
        app:cardCornerRadius="13dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/assetsIcon"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp" />

            <TextView
                android:id="@+id/assetsName"
                style="@style/Text.000.14"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/assetsIcon"
                android:gravity="center_vertical"
                android:text="assets name"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/assetsAmount"
                style="@style/Text.999999.14"
                android:layout_width="120dp"
                android:layout_height="38dp"
                android:layout_alignParentRight="true"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="15dp"
                android:ellipsize="end"
                android:gravity="center|right"
                android:lines="1"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="3sp"
                app:autoSizeTextType="uniform"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>