<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="126dp"
        android:src="@mipmap/splash_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <com.platon.aton.widge.ShadowContainer
        android:id="@+id/sc_create_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:duplicateParentState="true"
        android:focusable="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/sc_import_wallet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:yOffset="1dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_main_button"
            android:gravity="center">

            <TextView
                style="@style/Text.f6f6f6.16"
                android:drawablePadding="8dp"
                android:text="@string/btnCreatewallet"
                android:textColor="@color/color_main_button_text"
                app:drawableRightCompat="@mipmap/icon_create_wallet" />
        </LinearLayout>

    </com.platon.aton.widge.ShadowContainer>


    <com.platon.aton.widge.ShadowContainer
        android:id="@+id/sc_import_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        app:enableShadowColor="@color/color_66969696"
        app:layout_constraintBottom_toTopOf="@+id/tv_guide_tips"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:yOffset="1dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_secondary_button"
            android:gravity="center">
            <TextView
                style="@style/Text.f6f6f6.16"
                android:drawableRight="@mipmap/icon_import_wallet"
                android:drawablePadding="8dp"
                android:text="@string/btnImportwallet"
                android:textColor="@color/color_secondary_button_text" />
        </LinearLayout>

    </com.platon.aton.widge.ShadowContainer>

    <TextView
        android:id="@+id/tv_guide_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="@string/guide_tips"
        android:textColor="@color/color_61646e"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>