<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f9fbff"
    android:orientation="vertical"
    android:paddingLeft="@dimen/layout_space_10"
    android:paddingRight="@dimen/layout_space_10">

    <LinearLayout
        android:id="@+id/linear_view_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:layout_marginBottom="10.0dip"
        android:background="@drawable/bg_item_sidebar_wallet_default"
        android:orientation="vertical"
        android:padding="@dimen/layout_space_10">

        <TextView
            android:id="@+id/wallet_name"
            style="@style/Text.000000.15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_space_05"
            android:ellipsize="end"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="wallet name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wallet_address"
            style="@style/Text.000000.15"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_space_05"
            android:gravity="center|left"
            android:text="wallet address"
            android:typeface="monospace"
            tools:ignore="RtlHardcoded" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_space_05"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wallet_balance"
                style="@style/Text.61646e.14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|left"
                android:maxWidth="225.0dip"
                android:singleLine="true"
                android:text="--" />

            <TextView
                style="@style/Text.61646e.14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:text="LAT" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/color_dddfe6"
        android:visibility="gone" />
</LinearLayout>