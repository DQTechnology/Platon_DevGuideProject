<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ll_item"
        android:layout_width="15.0dip"
        android:layout_height="15.0dip"
        android:layout_gravity="right"
        android:layout_marginRight="8.0dip"
        android:src="@drawable/shape_triangle" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/bg_shape_triangle"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/create_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20.0dip"
            android:paddingTop="16.0dip"
            android:paddingRight="20.0dip"
            android:paddingBottom="16.0dip">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_more_classic_create" />

            <TextView
                style="@style/Text.000.14"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:text="@string/createIndividualWallet" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginLeft="45.0dip"
            android:background="@color/color_ebeef4" />

        <LinearLayout
            android:id="@+id/import_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20.0dip"
            android:paddingTop="16.0dip"
            android:paddingRight="20.0dip"
            android:paddingBottom="16.0dip">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_more_classic_import" />

            <TextView
                style="@style/Text.000.14"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:text="@string/importIndividualWallet" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>